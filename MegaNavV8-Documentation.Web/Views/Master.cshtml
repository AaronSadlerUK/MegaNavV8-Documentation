@using MegaNavV8_Documentation.Core.Extensions.Umbraco
@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = null;

    var sitename = Umbraco.GlobalSettings().SiteName.Split(' ');
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>CoderDocs - Bootstrap 4 Documentation Template For Software Projects</title>

    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Bootstrap Documentation Template For Software Developers">
    <meta name="author" content="Xiaoying Riley at 3rd Wave Media">
    <link rel="shortcut icon" href="favicon.ico">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&display=swap" rel="stylesheet">

    <!-- FontAwesome JS-->
    <script src="https://kit.fontawesome.com/afd61d660a.js" crossorigin="anonymous"></script>

    <!-- Theme CSS -->
    <link id="theme-style" rel="stylesheet" href="/css/theme.css">

</head>

<body>
    <header class="header fixed-top">
        <div class="branding docs-branding">
            <div class="container-fluid position-relative py-2">
                <div class="docs-logo-wrapper">
                    <div class="site-logo">
                        <a class="navbar-brand" href="@Model.Root().Url()">
                            <img class="logo-icon mr-2" src="@Umbraco.GlobalSettings().Logo.GetCropUrl(width:40, height:40)" alt="@Umbraco.GlobalSettings().SiteName">
                            <span class="logo-text">
                                @foreach (var sn in sitename)
                                {
                                    if (sn == sitename.Last())
                                    {
                                        <span class="text-alt">@sn</span>
                                    }
                                    else
                                    {
                                        @sn
                                    }
                                }
                            </span>
                        </a>
                    </div>
                </div><!--//docs-logo-wrapper-->
                <div class="docs-top-utilities d-flex justify-content-end align-items-center">

                    <ul class="social-list list-inline mx-md-3 mx-lg-5 mb-0 d-none d-lg-flex">
                        @foreach (var sm in Umbraco.GlobalSettings().SocialMediaAccounts)
                        {
                            <li class="list-inline-item"><a href="@sm.Link.Url" target="@sm.Link.Target"><i class="@sm.Icon fa-fw"></i></a></li>
                        }
                    </ul><!--//social-list-->
                    @if (Umbraco.GlobalSettings().HasValue("topBarButton"))
                    {
                        <a href="@Umbraco.GlobalSettings().TopBarButton.Url" target="@Umbraco.GlobalSettings().TopBarButton.Target" class="btn btn-primary d-none d-lg-flex">@Umbraco.GlobalSettings().TopBarButton.Name</a>
                    }
                </div><!--//docs-top-utilities-->
            </div><!--//container-->
        </div><!--//branding-->
    </header><!--//header-->
    @RenderBody()
    <footer class="footer">

        <div class="footer-bottom text-center py-5">

            <ul class="social-list list-unstyled pb-4 mb-0">
                @foreach (var sm in Umbraco.GlobalSettings().SocialMediaAccounts)
                {
                    <li class="list-inline-item"><a href="@sm.Link.Url" target="@sm.Link.Target"><i class="@sm.Icon fa-fw"></i></a></li>
                }
            </ul><!--//social-list-->
            <!--/* This template is free as long as you keep the footer attribution link. If you'd like to use the template without the attribution link, you can buy the commercial license via our website: themes.3rdwavemedia.com Thank you for your support. :) */-->
            <small class="copyright">Designed with <i class="fas fa-heart" style="color: #fb866a;"></i> by <a class="theme-link" href="http://themes.3rdwavemedia.com" target="_blank">Xiaoying Riley</a> for developers</small>


        </div>

    </footer>

    <!-- Javascript -->
    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

